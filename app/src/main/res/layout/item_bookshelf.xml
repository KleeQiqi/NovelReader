<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">

    <ImageView
        android:id="@+id/bookshelf_item_cover"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/des_book_cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/bookshelf_item_cover"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/bookshelf_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/bookshelf_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textSize="11sp"
            android:ellipsize="end"
            android:lines="1"
            app:drawableStartCompat="@drawable/ic_bookshelf_item_author" />

        <TextView
            android:id="@+id/bookshelf_item_read_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:maxLines="1"
            android:textSize="11sp"
            android:ellipsize="end"
            android:lines="1"
            app:drawableStartCompat="@drawable/ic_bookshelf_item_read_process"/>

        <TextView
            android:id="@+id/bookshelf_item_last_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:maxLines="1"
            android:textSize="11sp"
            android:ellipsize="end"
            android:lines="1"
            app:drawableStartCompat="@drawable/ic_bookshelf_item_last_chapter"/>

    </LinearLayout>

</RelativeLayout>